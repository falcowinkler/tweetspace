apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    service: druid
  name: druid
spec:
  selector:
    matchLabels:
      service: druid
  template:
    metadata:
      labels:
        service: druid
    spec:
      containers:
      - image: druidio/example-cluster
        imagePullPolicy: Always
        name: druid
        ports:
        - containerPort: 8081
          protocol: TCP
